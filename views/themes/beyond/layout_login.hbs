<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <!-- Metadata -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{__ "txt_login"}}-{{projcfg.apptitle}}</title>
    <meta name="keywords" content="{{projcfg.keywords}}">
    <meta name="description" content="{{projcfg.appdescription}}">
    <!--Basic Styles-->
    <link href="{{projcfg.appurl}}/static/{{projcfg.theme}}css/bootstrap.min.css" rel="stylesheet" />
    <link id="bootstrap-rtl-link" href="" rel="stylesheet" />
    <link href="{{projcfg.appurl}}/static/{{projcfg.theme}}css/font-awesome.min.css" rel="stylesheet" />
<!--
    <link id="beyond-link" href="{{projcfg.appurl}}/static/{{projcfg.theme}}css/beyond.min.css" rel="stylesheet" type="text/css" />
-->
    <link rel="stylesheet" href="{{projcfg.appurl}}/static/css/login/style.css">
    <script>
        function submitForm() {
            var password_ = document.getElementById('password_').value;
            document.getElementById('password').value = strEnc(hex_md5(password_), '{{key_1}}', '{{key_2}}', '{{key_3}}');
            document.getElementById('password_').value = "";
            return true;
        }
        function reloadCaptcha() {
            document.getElementById('captchaImg').src = '{{projcfg.appurl}}/captcha?'+new Date();
        }
    </script>
  <!-- gray-bg-->
  <body>
  <!--Basic Scripts-->
      <script src="{{projcfg.appurl}}/static/{{projcfg.theme}}js/jquery.min.js"></script>
      <script src="{{projcfg.appurl}}/static/{{projcfg.theme}}js/bootstrap.min.js"></script>
      <script src="{{projcfg.appurl}}/static/{{projcfg.theme}}js/slimscroll/jquery.slimscroll.min.js"></script>
      <!--Beyond Scripts-->
      <script src="{{projcfg.appurl}}/static/{{projcfg.theme}}js/beyond.min.js"></script>
      <script src="{{projcfg.appurl}}/static/js/common/md5.js"></script>
      <script src="{{projcfg.appurl}}/static/js/common/security.mini.js"></script>
      <script src="{{projcfg.appurl}}/static/js/backstretch/jquery.backstretch.min.js"></script>


  <!--<script src="https://cdn.asilu.com/jquery.js,jquery.backstretch.min.js"></script>-->

      <script>
          $.backstretch([
              '{{projcfg.appurl}}/static/images/login_bg1.jpg',
              '{{projcfg.appurl}}/static/images/login_bg2.jpg',
              '{{projcfg.appurl}}/static/images/login_bg2.jpg'
          ],{
              fade:1000, // 动画时长
              duration:1000 // 切换延时
          });
      </script>
      <div class="top-content" >
          <div class="inner-bg" >
              <div class="container">
                  <div align="center" >
                      <img src="{{projcfg.appurl}}/static/images/login_log.png" ></div>
                  <div class="row" align="center">
                      <div class="col-sm-6 col-sm-offset-3 form-box">
                          <div class="form-top" style="width: 400px">
                              <div class="form-top-left">
                                  <h1 style="font-family:'Microsoft YaHei';color: #ffffff">&nbsp;&nbsp;登&nbsp;&nbsp;录</h1>
                              </div>
                              <div class="form-top-right">
                                  <i class="fa fa-lock"></i>&nbsp;
                              </div>
                          </div>
                          <div class="form-bottom" style="width: 400px">
                              <form class="m-t" role="form"  action="{{projcfg.appurl}}/login" method="post" onsubmit="return submitForm();">
                                  <div class="form-group" align="center">
                                      <input id="username" name='username'  style="width: 300px"  type="text" class="form-control" placeholder="{{{__ "tips_input_loginid"}}}" />
                                  </div>
                                  <div class="form-group" align="center">
                                      <input id="password_" name='password_'   style="width: 300px" type="password" class="form-control" placeholder="{{{__ "tips_input_password"}}}" />
                                      <input type="hidden" id="password" name="password"/>
                                  </div>
                                  {{#if projcfg.captcha_login_enable}}
                                      <div class="form-group" align="center">
                                          <input id="captcha" name='captcha'  value='' type="text" class="form-control" style="width:214px;display: inline;" placeholder="{{{__ "tips_input_captcha"}}}" />
                                          <img id="captchaImg" style="display: inline;vertical-align: top;" src="{{projcfg.appurl}}/captcha" onclick="reloadCaptcha()"/>
                                      </div>
                                  {{/if}}

                                  <div class="loginbox-submit form-group" align="center">
                                      <input type="submit" style="width: 300px" class="btn btn-primary btn-block" value="{{{__ "btn_login"}}}">
                                  </div>
                                  <div class="loginbox-textbox" style="color:red;">
                                      {{message}}
                                  </div>
                              </form>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </body>
</html>
